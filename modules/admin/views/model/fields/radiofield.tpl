<div class="field-container radiofield-div  {if isset($htmlCss.class)}{$htmlCss.class}{/if}">	<div class="left field-title">		{$title} {if isset($lang) && !empty($lang)}[{$lang}]{/if}	</div>	<div class="right">		<div class="radio-group" name="{$name}">			{foreach from=$keyValue key=k item=v}				<div class="radio-button left" isselected="{if ($k == $value)}1{else}0{/if}" value="{$k}">					<div class="left radio-icon {if ($k == $value)}radio-button-selected{/if}"></div>					<div class="left radio-value">{$v}</div>					<div class="clear"></div>					{if ($k == $value)}<input type="hidden" name="{$name}" value="{$k}"/>{/if}				</div>			{/foreach}			<div class="clear"></div>		</div>	</div>	<div class="clear"></div></div>