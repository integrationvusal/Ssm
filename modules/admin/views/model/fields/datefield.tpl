<div class="field-container datefield-div  {if isset($htmlCss.class)}{$htmlCss.class}{/if}">	<div class="left field-title">		{$title} {if isset($lang) && !empty($lang)}[{$lang}]{/if}	</div>	<div class="right">		<div id="{$elementId}"></div>		<input type="text" name="{$name}" value="{$value}" class="datefield-input field hide" id="input-{$elementId}" />	</div>	<div class="clear"></div></div><script>	$('#{$elementId}').DatePicker({		flat: true,		format:'Y-m-d',				date: '{$value}',		current: '{$value}',				starts: 1,		onBeforeShow: function(){					},		onChange: function(formated, dates){			$('#input-{$elementId}').val(formated);			showMessage(Lang['info'], Lang['date_changed']);		}	});</script>