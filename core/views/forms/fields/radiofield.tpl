<div class="field-container radiofield-div">	<div class="left">		{$title}	</div>	<div class="right">		<div class="radio-group" name="{$name}">			{foreach from=$options key=k item=v}				<div class="radio-button left" isselected="0" value="{$k}">					<div class="left radio-icon"></div>					<div class="left radio-value">{$v}</div>					<div class="clear"></div>				</div>			{/foreach}			<div class="clear"></div>		</div>	</div>	<div class="clear"></div></div>